{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "target": "es2018",
    "lib": [
      "es2018"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./",
    "esModuleInterop": true,
    "baseUrl": "src/",
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "noImplicitReturns": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.js",
    "./**/*.json",
    "./*.ts"
  ],
  "exclude": [
    "node_modules",
    "test/**/*.ts",
    "**/*.test.ts",
    "dist"
  ]
}
